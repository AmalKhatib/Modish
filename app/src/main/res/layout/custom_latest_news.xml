<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="200dp"
     android:layout_height="wrap_content" android:layout_marginRight="10dp"
      android:background="@color/white"
     android:orientation="vertical">

    <ImageView
        android:id="@+id/img_latest_news"
        android:layout_width="match_parent"
        android:layout_height="156.67dp"
        android:src="@drawable/img_news"/>

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:text="This is news title"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:text="18 April 2019 | 05:05 Am"
            android:textSize="12sp"
            android:textColor="@color/grey"
            />


    <TextView
            android:id="@+id/tv_news_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:text="This is news details, this is news details, this is news details.."/>

    <LinearLayout
            android:id="@+id/layout_cart_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/bg_product_like">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More details"
                android:layout_marginBottom="7dp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="117dp"
            android:layout_height="15dp"
            android:layout_marginTop="-15dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/lightGrey"/>
</LinearLayout>